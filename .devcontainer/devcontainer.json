{
  "name": "FastAPI Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [8000],
  "postCreateCommand": "pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance", "ms-azuretools.vscode-docker", "rtg.py-snippets"],
      "settings": {
        "python.pythonPath": "/usr/local/bin/python"
      }
    }
  }
}
